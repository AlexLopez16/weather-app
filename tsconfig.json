{
  "compilerOptions": {
    "target": "es6",
    "module": "node16",
    "esModuleInterop": true,
    "outDir": "./dist",
    "strict": true,
    "moduleResolution": "node16",
    "sourceMap": true,
    "resolveJsonModule": true,
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.json"
  ],
  "files": [
    "src/db/data.json"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}